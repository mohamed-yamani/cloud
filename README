### ansible ###

### ansible-galaxy is a tool to manage Ansible Galaxy roles ###
ansible-galaxy install -r requirements.yml
### ansible-doc is a tool to generate documentation for Ansible modules ###
ansible multi -i inventory -a hostname --fork 1
ansible -i inventory db -m setup
ansible -i inventory db -m ping
### ping the db ###
ansible -i inventory db -m shell -a "ls -l /var/log/mysql"
ansible -i inventory multi -b -m apt -a "name=ntp state=present"
ansible -i inventory multi --become -m apt -a "name=ntp state=present"
ansible -i inventory multi --ask-become-pass -m apt -a "name=ntp state=present"
ansible-doc service
ansible -i inventory multi --become -m service -a "name=ntpd state=started enabled=yes"
ansible -i inventory multi -b -a "service ntpd start"
ansible -i inventory multi -b -a "ntpdate -q 0.pool.ntp.org"
limit: ansible -i inventory app -b -a "hostname" --limit "192.168.60.4"
ansible -i inventory all -b -m shell -a "cat /var/log/dmesg | grep Video | wc -l"
ansible -i inventory all -b -m cron -a "name=something hour=4 job/path/to/script.sh"
ansible -i inventory all -b -m git -a "repo=git@github.com:mohamed-yamani/cloud.git dest=/ update=yes version=1.2.4"

### ansible-playbook ###
ansible-playbook -i inventory playbook.yml --limit db
ansible-playbook -i inventory playbook.yml --limit db --tags "db"

### ansible-inventory ###
ansible-inventory --list -i inventory
